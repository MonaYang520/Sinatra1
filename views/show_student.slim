h3 #{@student.firstname} #{@student.lastname}
p Gender: #{@student.gender}
p Birthdate: #{@student.birthdate.strftime("%e %B %Y") if @student.birthdate}
p Phone: #{@student.phone}
p <a href="/students">back to students index</a>
p <a href="/students/#{@student.id}/edit">edit this student</a>
form action="/students/#{@student.id}" method="POST"
